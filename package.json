{
  "name": "ionic-js-sdk",
  "version": "2.0.0",
  "description": "Ionic SDK implemented using Javascript.",
  "main": "output/libs/sdk.bundle.js",
  "scripts": {
    "lint": "eslint ./sdk",
    "coverage": "npm run jascoverage && npm run cukcoverage",
    "jascoverage": "istanbul cover jasmine",
    "cukcoverage": "istanbul cover cucumber-js",
    "postbuild": "npm run lint",
    "predevelop": "npm run build",
    "prebuild": "node ./scripts/cleanEnvironment.js",
    "build": "webpack -p && npm run doc && cp sdk/main.html output/main.html && cp LICENSE.md output/LICENSE.md",
    "doc": "jsdoc -c jsdoc.conf.json",
    "test": "jasmine"
  },
  "keywords": [
    "ionic",
    "javascript",
    "sdk"
  ],
  "eslintConfig": {
    "env": {
      "browser": true,
      "commonjs": true,
      "es6": true,
      "node": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
      "sourceType": "module"
    },
    "rules": {
      "indent": [
        "error",
        4
      ],
      "no-console": 0,
      "linebreak-style": [
        "error",
        "unix"
      ],
      "quotes": [
        "error",
        "single"
      ],
      "semi": [
        "error",
        "always"
      ]
    }
  },
  "browser": {
    "child_process": false,
    "fs": false,
    "request": false
  },
  "author": "Ionic Security",
  "license": "ISC",
  "dependencies": {
    "babel-polyfill": "^6.23.0",
    "buffer": "^5.0.6",
    "docdash": "^0.4.0",
    "file-saver": "^1.3.3",
    "http-server": "^0.10.0",
    "ink-docstrap": "^1.3.2",
    "jsdoc": "^3.5.5",
    "jszip": "^3.1.3",
    "node-forge": "^0.7.1",
    "sjcl": "^1.0.6",
    "uuid4": "^1.0.0"
  },
  "devDependencies": {
    "babel-core": "^6.25.0",
    "babel-loader": "^7.1.0",
    "babel-preset-es2015": "^6.24.1",
    "base-64": "^0.1.0",
    "base64-url": "^1.3.3",
    "chai": "^4.1.1",
    "chromedriver": "^2.30.1",
    "cucumber": "^2.3.1",
    "eslint": "^4.19.1",
    "eslint-config-google": "^0.9.1",
    "istanbul": "^0.4.5",
    "express": "^4.15.3",
    "fs-extra": "^4.0.0",
    "git-rev": "^0.2.1",
    "jasmine": "^2.6.0",
    "jasmine-core": "^2.6.2",
    "mkdirp": "^0.5.1",
    "request": "^2.81.0",
    "rimraf": "^2.6.1",
    "selenium-webdriver": "^3.4.0",
    "webpack": "^3.0.0",
    "eslint-plugin-lowercase-naming": "^0.0.1"
  }
}
